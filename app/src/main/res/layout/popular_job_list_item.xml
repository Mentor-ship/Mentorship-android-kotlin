<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:background="@drawable/custom_white_rounded_card"
    android:foreground="@drawable/custom_ripple_effect_larger"
    >

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        android:minHeight="150dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/company_image"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_image"
        android:padding="20dp"
        android:background="@drawable/custom_black_rounded_card">

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:scrollHorizontally="true"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/duty_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:scrollHorizontally="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_below="@id/job_name"
            android:layout_alignParentStart="true"
            android:background="@drawable/custom_dark_chip"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/job_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey"
            android:layout_below="@id/job_name"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>